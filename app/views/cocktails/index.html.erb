<%= javascript_pack_tag 'fade' %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1574579804640-a15fecaeda35?ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80);">
  <div class="container">
    <h2>Care to join us for some cocktails?</h2>
    <p>Add your favorite cocktails to our listing to share with others!</p>
    <%= link_to "Get Started", new_cocktail_path(@cocktail), class: "btn btn-primary" %>
  </div>
</div>

<div class="explore" id="explore">
  <h3>Explore User Favorites</h3>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-product my-3 ">
        <%= cl_image_tag cocktail.photo.key,
        width: 400, height: 300, crop: :fill %>
        <div class="card-product-infos">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>

