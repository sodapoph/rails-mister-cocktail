<div class="container my-3 d-flex justify-content-between">
  <div class="title my-4 d-flex">
    <div>
      <h2><%= @cocktail.name %></h2>
      <h4> <%= "Ingredients" %> </h4>
      <div class="dose_name">
        <% @cocktail.doses.each do |dose| %>
          <div class="name-box"><p> <%= dose.ingredient.name %>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete #{dose.ingredient.name}?" } do %>
                <i class="fas fa-trash-alt"></i>
                <% end %> </p>
            <p><%= dose.description %> </p>
            <% end %>
          </div>
        <div class="buttons mb-2">
          <%= link_to "Add an Ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
          <%= link_to "Back to List", cocktails_path, class: "btn btn-primary my-2 ml-1" %>
        </div>
    </div>
  </div>
  <div class="image-box">
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  </div>
  </div>
</div>
